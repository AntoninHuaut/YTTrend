<script src="/lib/detectmobilebrowser.js"></script>

<script>
    refresh();
    function refresh() {
        const container = Array.from(document.querySelectorAll(".container")).concat(Array.from(document.querySelectorAll('.container-fluid')));
        if (jQuery.browser.mobile && container)
            container.forEach(el => el.classList.remove("w-25", "w-50", "w-75"));
    }
</script>

